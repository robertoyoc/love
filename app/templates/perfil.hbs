

    <div id="page-wrapper">

            <div class="page-content">

                <!-- begin PAGE TITLE ROW -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="page-title">
                            <h1>
                                Perfil 
                                <small>Administrativo</small>
                            </h1>
                            <ol class="breadcrumb">
                                <li><i class="fa fa-dashboard"></i> {{#link-to 'principal'}}Inicio{{/link-to}}
                                </li>
                                <li class="active">Perfil de usuario</li>
                            </ol>
                        </div>
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <!-- /.row -->
                <!-- end PAGE TITLE ROW -->

                <div class="row">
                    <div class="col-lg-12">

                        <div class="portlet portlet-default">
                            <div class="portlet-body">
                                <ul id="userTab" class="nav nav-tabs">
                                    <li class="active"><a href="#overview" data-toggle="tab">Resumen</a>
                                    </li>
                                    <li><a href="#profile-settings" data-toggle="tab">Editar perfil</a>
                                    </li>
                                    <li><a href="#new-admin" data-toggle="tab">Agregar administrador</a>
                                    </li>
                                    <li><a href="#admin-table" data-toggle="tab">Lista administradores </a>
                                    </li>
                                </ul>
                                <div id="userTabContent" class="tab-content">
                                    <div class="tab-pane fade in active" id="overview">

                                        <div class="row">
                                            <div class="col-lg-2 col-md-3">
                                                <img class="img-responsive img-profile" src="{{or model.foto "https://www.teksteshqip.com/img_upz/allart_full/63351.jpg"}}" alt="">
                                                <div class="list-group">
                                                    <a href="#" class="list-group-item active">Resumen</a>
                                                    <a href="#" class="list-group-item">Notificaciones<span class="badge orange">1</span></a>
                                                    <a href="#" class="list-group-item">Tasks<span class="badge blue">3</span></a>
                                                </div>
                                            </div>
                                            <div class="col-lg-7 col-md-5">
                                                <h1>{{model.nombre}} {{model.apellidos}}</h1>
                                                <ul class="list-inline">
                                                    <li><i class="fa fa-user fa-muted"></i>{{model.profesion}} {{model.nombre}} {{model.apellidos}}</li>
                                                    <li><i class="fa fa-map-marker fa-muted"></i> {{model.profesion}}</li>
                                                    <li><i class="fa fa-group fa-muted"></i> {{model.lider}}</li>
                                                </ul>
                                            </div>
                                            <div class="col-lg-6 col-md-6">
                                                <h3>Detalles de contacto</h3>
                                                <p><i class="fa fa-phone fa-muted fa-fw"></i> {{model.nomina}}</p>
                                                <p><i class="fa fa-phone fa-muted fa-fw"></i> {{model.telefono}}</p>
                                                <p><i class="fa fa-building-o fa-muted fa-fw"></i> {{model.ubicacion}}</p>
                                                <p><i class="fa fa-envelope-o fa-muted fa-fw"></i>  <a href="#">{{session.currentUser.email}}</a>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="tab-pane fade" id="profile-settings">
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <ul id="userSettings" class="nav nav-pills nav-stacked">
                                                    <li class="active"><a href="#basicInformation" data-toggle="tab"><i class="fa fa-user fa-fw"></i>Información</a>
                                                    </li>
                                                    <li><a href="#profilePicture" data-toggle="tab"><i class="fa fa-picture-o fa-fw"></i> Foto de perfil</a>
                                                    </li>
                                                    <li><a href="#changePassword" data-toggle="tab"><i class="fa fa-lock fa-fw"></i> Cambiar contraseña</a>
                                                    </li>
                                                </ul>
                                            </div>
                                            <div class="col-sm-9">
                                                <div id="userSettingsContent" class="tab-content">
                                                    <div class="tab-pane fade in active" id="basicInformation">
                                                        <form role="form">
                                                            <h4 class="page-header">Información personal:</h4>
                                                            <div class="form-group">
                                                                <label>Profesión</label>
                                                                {{input type="text" class="form-control" value=model.profesion}}
                                                            </div>
                                                            <div class="form-group">
                                                                <label>Nómina</label>
                                                                {{input type="text" class="form-control" value=model.nomina}}
                                                            </div>
                                                            <div class="form-group">
                                                                <label>Nombre</label>
                                                                {{input type="text" class="form-control" value=model.nombre}}
                                                            </div>
                                                            <div class="form-group">
                                                                <label>Apellidos</label>
                                                                {{input type="text" class="form-control" value=model.apellidos}}
                                                            </div>
                                                            <div class="form-group">
                                                                <label>Área o Departamento</label>
                                                                {{input type="text" class="form-control" value=model.departamento}}
                                                            </div>
                                                            <div class="form-group">
                                                                <label>Lider</label>
                                                                {{input type="text" class="form-control" value=model.lider}}
                                                            </div>
                                                            <h4 class="page-header">Detalles de contacto</h4>
                                                            <div class="form-group">
                                                                <label>Teléfono</label>
                                                                {{input type="number" class="form-control" value=model.telefono}}
                                                            </div>
                                                            <div class="form-group">
                                                                <label>Ubicación en el campus</label>
                                                                {{input type="text" class="form-control" value=model.ubicacion}}
                                                            </div>
                                                            <div class="form-group">
                                                                <label><i class="fa fa-envelope-o fa-fw"></i> Correo electrónico</label>
                                                                {{input type="email" class="form-control" value=session.currentUser.email disabled=true}}
                                                            </div>
                                                            <button {{action 'save' model}}type="submit" class="btn btn-default {{unless model.hasDirtyAttributes 'disabled'}}">Guardar</button>
                                                            <button {{action 'reset' model}} type="reset" class="btn btn-green">Cancelar</button>
                                                        </form>
                                                    </div>
                                                    <div class="tab-pane fade" id="profilePicture">
                                                        <img class="img-responsive img-profile" src="{{or model.foto "https://www.teksteshqip.com/img_upz/allart_full/63351.jpg"}}" height="250px" width="250px" alt="">
                                                        <br>
                                                        <form role="form">
                                                            <div class="form-group">
                                                                <label>Adjuntar nueva imagen</label>
                                                                <input type="file" onchange={{action 'savePhoto'}} accept="image/*">
                                                                <p class="help-block"><i class="fa fa-warning"></i> La imagen debe de ser máximo de 500x500 px. Formatos soportados: JPG, GIF, PNG</p>
                                                                <button {{action 'save' model}} type="submit" class="btn btn-default">Actualizar</button>
                                                                <button type="reset" class="btn btn-green">Cancelar</button>
                                                            </div>
                                                        </form>
                                                    </div>
                                                    <div class="tab-pane fade in" id="changePassword">
                                                        <h3>Cambiar Contraseña</h3>
                                                        <form role="form">
                                                            <div class="form-group">
                                                                <label>Contraseña actual</label>
                                                                {{input type="password" class="form-control" value=currentPass}}
                                                            </div>
                                                            <div class="form-group">
                                                                <label>Nueva contraseña</label>
                                                                {{input type="password" class="form-control" value=newPass}}
                                                            </div>
                                                            <div class="form-group">
                                                                <label>Confirmar Nueva contraseña</label>
                                                                {{input type="password" class="form-control" value=confirmPass}}
                                                            </div>
                                                            <button {{action 'updatePass' newPass currentPass}} type="submit" class="btn btn-default">Cambiar contraseña</button>
                                                            <button type="reset" class="btn btn-green">Cancelar</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </div>

                                    {{!-- Nuevo administador --}}

                                    <div class="tab-pane fade" id="new-admin">
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <ul id="userSettings" class="nav nav-pills nav-stacked">
                                                    <li class="active"><a href="#basicInformation" data-toggle="tab"><i class="fa fa-user fa-fw"></i>Información</a>
                                                    </li>
                                                    
                                                </ul>
                                            </div>
                                            <div class="col-sm-9">
                                                <div id="userSettingsContent" class="tab-content">
                                                    <div class="tab-pane fade in active" id="basicInformation">
                                                        <form role="form">
                                                            <h4 class="page-header">Nuevo administrador:</h4>
                                                            
                                                            <div class="form-group">
                                                                <label>Nómina</label>
                                                                {{input type="text" class="form-control" value=newAdmin.nomina}}
                                                            </div>
                                                            <div class="form-group">
                                                                <label>Nombre</label>
                                                                 {{input type="text" class="form-control" value=newAdmin.nombre}}
                                                            </div>
                                                            <div class="form-group">
                                                                <label>Apellidos</label>
                                                                 {{input type="text" class="form-control" value=newAdmin.apellidos}}
                                                            </div>
                                                            <div class="form-group">
                                                                <label><i class="fa fa-envelope-o fa-fw"></i> Correo electrónico</label>
                                                                 {{input type="text" class="form-control" value=newAdmin.email}}
                                                            </div>
                                                            <div class="form-group">
                                                                <label>Contraseña</label>
                                                                 {{input type="password" class="form-control" value=newAdmin.pass}}
                                                            </div>
                                                            <div class="form-group">
                                                                <label>Ingresa nuevamente la contraseña</label>
                                                                 {{input type="password" class="form-control" value=newAdmin.comfirmPass}}
                                                            </div>
                                                                                                                
                                                            <button {{action 'newAdmin' newAdmin}}class="btn btn-default">Guardar</button>
                                                            <button type="reset" class="btn btn-green">Cancelar</button>
                                                        </form>
                                                    </div>
                                                    
                                                    
                                                </div>
                                            </div>
                                        </div>

                                    </div>

                                    {{!-- FIN nuevo administrador --}}

                                    {{!-- Tabla administradores --}}
                                    <div class="tab-pane fade" id="admin-table">


                                        <div class="row" id="admin-table">

                                            <div class="col-lg-12">

                                                <div class="portlet portlet-default">
                                                    <div class="portlet-heading">
                                                        <div class="portlet-title">
                                                            <h4>Administradores registrados</h4>
                                                        </div>
                                                        <div class="clearfix"></div>
                                                    </div>
                                                    <div class="portlet-body">
                                                        <div class="table-responsive">
                                                            <table id="example-table" class="table table-striped table-bordered table-hover table-green">
                                                                <thead>
                                                                    <tr>
                                                                        <th>Nómina</th>
                                                                        <th>Nombre</th>
                                                                        <th>Apellidos</th>
                                                                        <th>Correo electrónico</th>
                                                                        <th>Perfil Completo</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    {{#each admins as |admin|}}
                                                                    {{#unless admin.isNew}}
                                                                    <tr class="odd gradeX">
                                                                        <td>{{admin.nomina}}</td>
                                                                        <td>{{admin.nombre}}</td>
                                                                        <td>{{admin.apellidos}}</td>
                                                                        <td>{{admin.email}}</td>
                                                                        <td class="center"><a href="#" class="btn btn-info">Ver más</a></td>
                                                                    </tr>
                                                                    {{/unless}}
                                                                    {{/each}}
                                                                </tbody>
                                                            </table>
                                                        </div>
                                                        <!-- /.table-responsive -->
                                                    </div>
                                                    <!-- /.portlet-body -->
                                                </div>
                                                <!-- /.portlet -->

                                            </div>
                                            <!-- /.col-lg-12 -->

                                        </div>

                                    </div>

                                    {{!-- FIN Tabla administradores --}}

                                </div>
                            </div>
                            <!-- /.portlet-body -->
                        </div>
                        <!-- /.portlet -->


                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <!-- /.row -->

            </div>
            <!-- /.page-content -->

        </div>



{{outlet}}
