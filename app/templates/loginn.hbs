
<body class="login" background="img/fondo.jpg">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-banner text-center">
                	<img src="img/iloveme.png" width="280" height="160">
                </div>
                <div class="portlet portlet-green">
                    <div class="portlet-heading login-heading">
                        <div class="portlet-title">
                            <h4><strong>Inicio de sesión</strong>
                            </h4>
                        </div>
                        {{!-- <div class="portlet-widgets">
                            <button class="btn btn-white btn-xs"><i class="fa fa-plus-circle"></i> Crear nuevo usuario</button>
                        </div> --}}
                        <div class="clearfix"></div>
                    </div>
                    <div class="portlet-body">
                        <form accept-charset="UTF-8" role="form">
                            <fieldset>
                                <div class="form-group">
                                    {{input value=email class="form-control" placeholder="Correo electrónico institucional" name="email" type="text"}}
                                </div>
                                <div class="form-group">
                                    {{input value=pass class="form-control" placeholder="Contraseña" name="password" type="password" }}
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input name="remember" type="checkbox" value="Remember Me">Recordar cuenta
                                    </label>
                                </div>
                                <br>
                                <a {{action 'login' email pass}} class="btn btn-lg btn-green btn-block">Iniciar sesión</a>
                            </fieldset>
                            <br>
                            <p class="small">
                                <a href="#">¿Olvidaste tu contraseña?</a>
                            </p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>


{{outlet}}
  <script src="/js/plugins/slimscroll/jquery.slimscroll.min.js"></script>
    <script src="/js/plugins/hisrc/hisrc.js"></script>
    <script src="/js/plugins/popupoverlay/jquery.popupoverlay.js"></script>
    <script src="/js/plugins/popupoverlay/defaults.js"></script>

    <script src="/js/plugins/popupoverlay/logout.js"></script>


    <script src="js/flex.js"></script>






