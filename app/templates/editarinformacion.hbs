

    <div id="page-wrapper">

            <div class="page-content">

                <!-- begin PAGE TITLE ROW -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="page-title">
                            <h1>
                                Editar Información
                            </h1>
                            <ol class="breadcrumb">
                                <li><i class="fa fa-dashboard"></i>  <a href="principal">Inicio</a>
                                </li>
                                <li class="active">Editar publicación</li>
                            </ol>
                        </div>
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <!-- /.row -->
                <!-- end PAGE TITLE ROW -->

                <div class="row">
                    <div class="col-lg-12">

                        <div class="portlet portlet-default">
                            <div class="portlet-body">
                                <ul id="userTab" class="nav nav-tabs">
                                    <li><a href="#profile-settings" data-toggle="tab">Editar publicación</a>
                                    </li>
                                </ul>
                                <div id="userTabContent" class="tab-content">
                                    <div class="tab-pane fade in active" id="profile-settings">
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <ul id="userSettings" class="nav nav-pills nav-stacked">
                                                    <li class="active"><a href="#basicInformation" data-toggle="tab"><i class="fa fa-picture-o fa-fw"></i>Realizar publicación</a>
                                                    </li>
                                                </ul>
                                            </div>
                                             <div class="col-sm-9">
                                                <div id="userSettingsContent" class="tab-content">
                                                    <div class="tab-pane fade in active" id="basicInformation">
                                                        <form role="form">
                                                            <h4 class="page-header">Información general de la publicación:</h4>
                                                            <div class="form-group">
                                                                <label><i class=""></i> Selecciona el área informativa a la cual corresponde la publicación</label>
                                                                <select  class="form-control" onchange={{action (mut model.area) value="target.value"}}>
                                                                    <option value="Cuida tu salud" selected="{{eq model.area "Cuida tu salud"}}">Cuida tu salud</option>
                                                                    <option value="Manejo del tiempo" selected="{{eq model.area "Manejo del tiempo"}}">Manejo del tiempo</option>
                                                                    <option value="Motivate" selected="{{eq model.area "Motivate"}}">Motivate</option>
                                                                    <option value="Nutrición" selected="{{eq model.area "Nutrición"}}">Nutrición</option>
                                                                </select>
                                                            </div>
                                                            <div class="form-group">
                                                                <label>Nombre de la publicación</label>
                                                                {{input type="text" class="form-control" value=model.nombre}}
                                                            </div>
                                                            <div class="form-group">
                                                                <label>Fecha de inicio</label>
                                                                <div id="sandbox-container">
                                                                    {{input type="date" class="form-control" value=model.inicio}}
                                                                </div>
                                                            </div>
                                                            <div class="form-group">
                                                                <label>Fecha de fin</label>
                                                                <div id="sandbox-container">
                                                                    {{input type="date" class="form-control" value=model.fin}}
                                                                </div>
                                                            </div>
                                                            <div class="form-group">
                                                                <label>Adjuntar imagen</label>
                                                                <input type="file" onchange={{action 'savePhoto'}}  accept="image/*">
                                                                <p class="help-block"><i class="fa fa-warning"></i> Formatos soportados: JPG, GIF, PNG</p>
                                                            </div>
                                                            <div class="form-group">
                                                                <label><b>Vista previa de la publicación</b></label>
                                                                <br>
                                                                <img class="img-responsive img-profile" src="{{or model.imgUrl "https://support.kickofflabs.com/wp-content/uploads/2016/06/800x1200.png"}}" alt="">
                                                            </div>
                                                            <button {{action 'save' model}} type="submit" class="btn btn-default">Guardar</button>
                                                            <button {{action 'cancelar' model}}class="btn btn-green">Cancelar</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <!-- /.portlet-body -->
                        </div>
                        <!-- /.portlet -->


                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <!-- /.row -->

            </div>
            <!-- /.page-content -->

        </div>




